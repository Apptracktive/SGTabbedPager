<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>SGTabbedPager</id>
    <version>0.0.4</version>
    <title>SGTabbedPager</title>
    <authors>Tomasz Cielecki</authors>
    <owners>Tomasz Cielecki</owners>
    <licenseUrl>https://github.com/Cheesebaron/SGTabbedPager/blob/master/LICENSE</licenseUrl>
    <projectUrl>https://github.com/Cheesebaron/SGTabbedPager</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Tabbed Pager for iOS</description>
    <tags>xamarin monotouch ios</tags>
    <dependencies>
      <group targetFramework ="Xamarin.iOS">
        <dependency id="Cirrious.FluentLayout" version="2.0.0" />
      </group>
    </dependencies>
    <iconUrl>http://i.imgur.com/V3983YY.png</iconUrl>
    <releaseNotes>
      0.0.4
      Added ability to change color of bottom line and tab indicator independently. Also added ability to change the font of the Tab items. Thanks Erlend!
      0.0.3
      Fixed crash on rotate
      0.0.2
      MvxSGTabbedPager was not included in previous builds
    </releaseNotes>
  </metadata>
  <files>   
    <!-- touch -->
    <file src="..\SGTabbedPager\bin\iPhone\Release\SGTabbedPager.*" target="lib\Xamarin.iOS10" />

    <file src="..\SGTabbedPager\**\*.cs" target="src\SGTabbedPager" />
  </files>
</package>
